@page "/liste-bateaux"
@using BlazorApp1
@using BlazorApp1.Components.Models
<h3>Nos bateaux disponibles</h3>

@if (bateaux is null || bateaux.Count == 0)
{
    <p>Aucun bateau à afficher.</p>
}
else
{
    <div class="bateaux-list">
        @foreach (var bateau in bateaux)
        {
            <div class="bateau-card">
                <img src="@bateau.ImageUrl" alt="@bateau.Nom" width="200" />
                <h4>@bateau.Nom</h4>
                <p>@bateau.Description</p>
                <p><strong>@bateau.PrixParJour € / jour</strong></p>
            </div>
        }
    </div>
}

@code {
    private List<Bateau> bateaux = new()
    {
        new Bateau { Id = 1, Nom = "Le Corsaire", PrixParJour = 250, Capacite = 6, ImageUrl = "img/corsaire.jpg", Description = "Un voilier rapide et élégant." },
        new Bateau { Id = 2, Nom = "La Sirène", PrixParJour = 300, Capacite = 8, ImageUrl = "img/sirene.jpg", Description = "Parfait pour des excursions en famille." }
    };
}
